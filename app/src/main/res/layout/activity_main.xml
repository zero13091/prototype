<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jude.prototype.MainActivity"
    android:background="#fff">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userField"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="26dp"
        android:text="Employee ID"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="116dp" />

    <EditText
        android:id="@+id/userField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="133dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/passField"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="197dp"
        android:layout_below="@+id/userField"
        android:layout_alignStart="@+id/userField" />

    <EditText
        android:id="@+id/passField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="232dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passField"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/textView2"
        android:onClick="login"
        android:text="Login"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="337dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map Test"
        android:layout_below="@+id/verify"
        android:layout_alignEnd="@+id/verify"
        android:layout_marginTop="32dp"
        android:onClick="openLocator"/>



</RelativeLayout>
